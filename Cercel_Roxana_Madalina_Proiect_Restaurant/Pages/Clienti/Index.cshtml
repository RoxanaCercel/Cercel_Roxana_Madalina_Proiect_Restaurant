@page
@model Cercel_Roxana_Madalina_Proiect_Restaurant.Pages.Clienti.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="text-center">
    <h1 class="display-4"><span style="color:crimson;">Clienții</span> noștrii fideli</h1>
</div><br />

<p>
    <a asp-page="Create">Adaugă un nou client!</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Client[0].Nume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client[0].Prenume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client[0].Varsta)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Client) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prenume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Varsta)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ClientId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ClientId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ClientId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
